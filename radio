        // ÏÉÅÌÉú Í¥ÄÎ¶¨
        let currentStation = null;
        let isPlaying = false;
        let hls = null;

        // DOM ÏöîÏÜå
        const audioPlayer = document.getElementById('audioPlayer');
        const playerBar = document.getElementById('playerBar');
        const radioGrid = document.getElementById('radioGrid');
        const volumeSlider = document.getElementById('volumeSlider');
        const playIcon = document.getElementById('playIcon');
        const pauseIcon = document.getElementById('pauseIcon');
        const loadingOverlay = document.getElementById('loadingOverlay');

        // ÌïÑÌÑ∞ ÏÉÅÌÉú
        let activeNetworkFilter = 'all';
        let activeGenreFilter = 'all';

        // ÌÜµÍ≥Ñ ÏóÖÎç∞Ïù¥Ìä∏
        function updateStats() {
            document.getElementById('totalCount').textContent = radioStations.length;
            const filteredCount = radioStations.filter(station => {
                const networkMatch = activeNetworkFilter === 'all' || station.network === activeNetworkFilter;
                const genreMatch = activeGenreFilter === 'all' || station.genre.includes(activeGenreFilter);
                return networkMatch && genreMatch;
            }).length;
            document.getElementById('filteredCount').textContent = filteredCount;
        }

        // ÎùºÎîîÏò§ Ïπ¥Îìú Î†åÎçîÎßÅ
        function renderRadioCards() {
            const filteredStations = radioStations.filter(station => {
                const networkMatch = activeNetworkFilter === 'all' || station.network === activeNetworkFilter;
                const genreMatch = activeGenreFilter === 'all' || station.genre.includes(activeGenreFilter);
                return networkMatch && genreMatch;
            });

            updateStats();

            if (filteredStations.length === 0) {
                radioGrid.innerHTML = `
                    <div class="empty-state" style="grid-column: 1/-1;">
                        <svg fill="currentColor" viewBox="0 0 24 24">
                            <path d="M20 6h-8l-2-2H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V8c0-1.1-.9-2-2-2zm-1 12H5c-.55 0-1-.45-1-1V9c0-.55.45-1 1-1h14c.55 0 1 .45 1 1v8c0 .55-.45 1-1 1z"/>
                        </svg>
                        <p>Ìï¥Îãπ Ï°∞Í±¥Ïóê ÎßûÎäî Î∞©ÏÜ°Ïù¥ ÏóÜÏäµÎãàÎã§.</p>
                    </div>
                `;
                return;
            }

            radioGrid.innerHTML = filteredStations.map((station, index) => `
                <div class="radio-card ${currentStation?.id === station.id && isPlaying ? 'playing' : ''}" 
                     data-id="${station.id}" 
                     onclick="playStation('${station.id}')"
                     style="animation-delay: ${Math.min(index * 0.05, 0.5)}s">
                    <div class="card-header">
                        <div class="station-logo ${station.logoClass}">${station.logoText}</div>
                        <div class="station-info">
                            <div class="station-name">${station.name}</div>
                            <div class="station-category">
                                ${station.genre.map(g => `<span class="category-tag">${g}</span>`).join('')}
                            </div>
                        </div>
                    </div>
                    <p class="station-desc">${station.description}</p>
                    <div class="play-indicator">
                        <div class="play-icon">
                            <svg width="14" height="14" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M8 5v14l11-7z"/>
                            </svg>
                            <div class="sound-wave">
                                <span class="wave-bar"></span>
                                <span class="wave-bar"></span>
                                <span class="wave-bar"></span>
                                <span class="wave-bar"></span>
                                <span class="wave-bar"></span>
                            </div>
                        </div>
                        <span>${currentStation?.id === station.id && isPlaying ? 'Ïû¨ÏÉù Ï§ë' : 'ÌÅ¥Î¶≠ÌïòÏó¨ Ïû¨ÏÉù'}</span>
                    </div>
                </div>
            `).join('');
        }

        // Î∞©ÏÜ° Ïû¨ÏÉù
        async function playStation(stationId) {
            const station = radioStations.find(s => s.id === stationId);
            if (!station) return;

            // Í∞ôÏùÄ Î∞©ÏÜ° ÌÅ¥Î¶≠ Ïãú ÌÜ†Í∏Ä
            if (currentStation?.id === stationId) {
                togglePlay();
                return;
            }

            // Î°úÎî© ÌëúÏãú
            loadingOverlay.classList.add('active');

            // Í∏∞Ï°¥ HLS Ï†ïÎ¶¨
            if (hls) {
                hls.destroy();
                hls = null;
            }

            currentStation = station;
            
            // ÌîåÎ†àÏù¥Ïñ¥ Î∞î ÏóÖÎç∞Ïù¥Ìä∏
            playerBar.classList.add('active');
            document.getElementById('nowPlayingTitle').textContent = station.name;
            const nowPlayingLogo = document.getElementById('nowPlayingLogo');
            nowPlayingLogo.textContent = station.logoText;
            nowPlayingLogo.className = `now-playing-logo ${station.logoClass}`;

            try {
                // Ïä§Ìä∏Î¶º URL (ÌîÑÎ°ùÏãúÍ∞Ä Î¶¨Îã§Ïù¥Î†âÌä∏ Ìï¥Ï§å)
                const streamUrl = station.streamUrl;
                
                // HLS.jsÎ°ú Ïû¨ÏÉù ÏãúÎèÑ
                if (Hls.isSupported()) {
                    hls = new Hls({
                        enableWorker: true,
                        lowLatencyMode: true,
                        maxBufferLength: 30,
                        maxMaxBufferLength: 60
                    });
                    
                    hls.loadSource(streamUrl);
                    hls.attachMedia(audioPlayer);
                    
                    hls.on(Hls.Events.MANIFEST_PARSED, () => {
                        audioPlayer.play()
                            .then(() => {
                                isPlaying = true;
                                updatePlayPauseButton();
                                renderRadioCards();
                                loadingOverlay.classList.remove('active');
                            })
                            .catch(handlePlayError);
                    });
                    
                    hls.on(Hls.Events.ERROR, (event, data) => {
                        console.error('HLS Error:', data);
                        if (data.fatal) {
                            loadingOverlay.classList.remove('active');
                            // HLS Ïã§Ìå® Ïãú ÏßÅÏ†ë Ïû¨ÏÉù ÏãúÎèÑ
                            tryDirectPlay(streamUrl);
                        }
                    });
                } else if (audioPlayer.canPlayType('application/vnd.apple.mpegurl')) {
                    // Safari native HLS
                    audioPlayer.src = streamUrl;
                    await audioPlayer.play();
                    isPlaying = true;
                    updatePlayPauseButton();
                    renderRadioCards();
                    loadingOverlay.classList.remove('active');
                } else {
                    // ÏßÅÏ†ë Ïû¨ÏÉù ÏãúÎèÑ
                    tryDirectPlay(streamUrl);
                }
            } catch (error) {
                handlePlayError(error);
            }
        }

        function tryDirectPlay(streamUrl) {
            audioPlayer.src = streamUrl;
            audioPlayer.play()
                .then(() => {
                    isPlaying = true;
                    updatePlayPauseButton();
                    renderRadioCards();
                    loadingOverlay.classList.remove('active');
                })
                .catch(handlePlayError);
        }

        function handlePlayError(error) {
            console.error('Play error:', error);
            loadingOverlay.classList.remove('active');
            alert('Ïû¨ÏÉùÏóê Ïã§Ìå®ÌñàÏäµÎãàÎã§. Ïû†Ïãú ÌõÑ Îã§Ïãú ÏãúÎèÑÌï¥Ï£ºÏÑ∏Ïöî.');
            isPlaying = false;
            updatePlayPauseButton();
            renderRadioCards();
        }

        // Ïû¨ÏÉù/ÏùºÏãúÏ†ïÏßÄ ÌÜ†Í∏Ä
        function togglePlay() {
            if (!currentStation) return;

            if (isPlaying) {
                audioPlayer.pause();
                isPlaying = false;
            } else {
                audioPlayer.play().catch(handlePlayError);
                isPlaying = true;
            }
            
            updatePlayPauseButton();
            renderRadioCards();
        }

        function updatePlayPauseButton() {
            playIcon.style.display = isPlaying ? 'none' : 'block';
            pauseIcon.style.display = isPlaying ? 'block' : 'none';
        }

        // Î≥ºÎ•® Ï°∞Ï†à
        volumeSlider.addEventListener('input', (e) => {
            audioPlayer.volume = e.target.value / 100;
        });

        // Ïò§ÎîîÏò§ Ïù¥Î≤§Ìä∏
        audioPlayer.addEventListener('play', () => {
            isPlaying = true;
            updatePlayPauseButton();
            renderRadioCards();
        });

        audioPlayer.addEventListener('pause', () => {
            isPlaying = false;
            updatePlayPauseButton();
            renderRadioCards();
        });

        audioPlayer.addEventListener('error', (e) => {
            console.error('Audio error:', e);
            loadingOverlay.classList.remove('active');
            isPlaying = false;
            updatePlayPauseButton();
            renderRadioCards();
        });

        // ÌïÑÌÑ∞ Ïù¥Î≤§Ìä∏
        document.getElementById('networkFilter').addEventListener('click', (e) => {
            if (e.target.classList.contains('filter-btn')) {
                document.querySelectorAll('#networkFilter .filter-btn').forEach(btn => btn.classList.remove('active'));
                e.target.classList.add('active');
                activeNetworkFilter = e.target.dataset.filter;
                renderRadioCards();
            }
        });

        document.getElementById('genreFilter').addEventListener('click', (e) => {
            if (e.target.classList.contains('filter-btn')) {
                document.querySelectorAll('#genreFilter .filter-btn').forEach(btn => btn.classList.remove('active'));
                e.target.classList.add('active');
                activeGenreFilter = e.target.dataset.filter;
                renderRadioCards();
            }
        });

        // Ï¥àÍ∏∞ Î≥ºÎ•® ÏÑ§Ï†ï
        audioPlayer.volume = 0.8;

        // Ï¥àÍ∏∞ Î†åÎçîÎßÅ
        renderRadioCards();
    </script>
</body>
</html>
