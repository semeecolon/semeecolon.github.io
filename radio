        // radio.bsod.kr ÌîÑÎ°ùÏãú Í∏∞Î∞ò URL ÏÉùÏÑ±
        const PROXY_BASE = 'https://radio.bsod.kr/stream/';
        
        function buildStreamUrl(stn, ch = null, city = null) {
            let url = PROXY_BASE + '?stn=' + stn;
            if (ch) url += '&ch=' + ch;
            if (city) url += '&city=' + city;
            return url;
        }

